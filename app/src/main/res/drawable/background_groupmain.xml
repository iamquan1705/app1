<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:width="100dp" android:height="100dp">
    <shape android:shape="rectangle">
        <solid android:color="#DAAAAA"/>
        <stroke
            android:width="5dp"
            android:color="#335B1180" />
        <corners
            android:radius="15dp"/>
    </shape>
</item>
    <item android:width="65dp" android:height="65dp"
        android:top="10dp"
        android:bottom="30dp"
        android:left="20dp"
        android:right="15dp">
        <shape android:shape="oval">
            <solid android:color="#D64D4D"/>

        </shape>
    </item>
    <item android:drawable="@drawable/group"
        android:top="20dp"
        android:bottom="20dp"
        android:left="30dp"
        android:right="20dp"
        android:width="45dp"
        android:height="45dp"
        >
    </item>

</layer-list>