<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activity.AddbophanActivity">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"

        android:gravity="center"
        android:background="@drawable/vien3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM BỘ PHẬN"
            android:textSize="25dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên bộ phận">
                <EditText
                    android:id="@+id/edtTenBoPhanThem"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vien1"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập ghi chú">
                <EditText
                    android:id="@+id/edtGhiChuThem"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/vien1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <android.widget.Button
                android:id="@+id/btnThemBoPhan"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:text="Thêm"
                android:textColor="#ffffff"
                />
            <android.widget.Button
                android:id="@+id/btnThoatThemBoPhan"
                android:layout_marginLeft="20dp"
                android:text="Thoát"
                android:background="#000000"
                android:layout_width="150dp"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>